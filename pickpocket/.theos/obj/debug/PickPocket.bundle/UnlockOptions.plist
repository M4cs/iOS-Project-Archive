			<key>cell</key>
			<string>PSSwitchCell</string>
			<key>default</key>
			<true/>
			<key>defaults</key>
			<string>com.ziph0n.pickpocket10</string>
			<key>key</key>
			<string>unlockProtectionEmail</string>
			<key>label</key>
			<string>Send Email</string>
			<key>PostNotification</key>
			<string>com.ziph0n.pickpocket10/ReloadPrefs</string>
		</dict>
		<dict>
			<key>cell</key>
			<string>PSSwitchCell</string>
			<key>default</key>
			<true/>
			<key>defaults</key>
			<string>com.ziph0n.pickpocket10</string>
			<key>key</key>
			<string>unlockProtectionSMS</string>
			<key>label</key>
			<string>Send SMS</string>
			<key>PostNotification</key>
			<string>com.ziph0n.pickpocket10/ReloadPrefs</string>
		</dict>
